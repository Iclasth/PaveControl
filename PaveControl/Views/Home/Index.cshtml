@model IEnumerable<PaveControl.Models.Produto>

@{
    ViewData["Title"] = "Cardápio de Pavês";
}

<div class="text-center py-4">
    <img src="~/images/Logo.jpeg" alt="Logo Pavê no Pote" style="max-height: 150px;" />
    <h2 class="mt-3" style="color: var(--chocolate-escuro); font-weight: 800;">SABORES DISPONÍVEIS:</h2>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-6 col-md-4 mb-4">
                @* Col-6 para aparecer 2 por linha no celular *@
                <div class="card pave-card h-100">
                    <img src="~/images/pave-exemplo.jpg" class="card-img-top p-2" style="border-radius: 20px;" alt="@item.Nome">
                    <div class="card-body text-center">
                        <h5 class="card-title" style="color: var(--texto-marrom);">@item.Nome</h5>
                        <h4 class="text-success">R$ @item.Preco.ToString("N2")</h4>
                        <a href="#" class="btn btn-pave w-100">ADICIONAR 🛒</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="fixed-bottom p-3 text-center" style="background-color: var(--chocolate-escuro);">
    <button class="btn btn-pave btn-lg shadow">FAÇA JÁ O SEU PEDIDO! 📱</button>
</div>